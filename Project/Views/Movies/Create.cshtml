@model Project.Data.ViewModel.NewMovieVm
@using Project.Models

@{
    ViewData["Title"] = "Create Movie";
}

<h1>Create Movie</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Name -->
            <div class="form-group mb-2">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="form-group mb-2">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Price -->
            <div class="form-group mb-2">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- Image -->
            <div class="form-group mb-2">
                <label asp-for="ImageURL"></label>
                <input asp-for="ImageURL" class="form-control" />
                <span asp-validation-for="ImageURL" class="text-danger"></span>
            </div>

            <!-- Start Date -->
            <div class="form-group mb-2">
                <label asp-for="StartDate"></label>
                <input asp-for="StartDate" type="date" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <!-- End Date -->
            <div class="form-group mb-2">
                <label asp-for="EndDate"></label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <!-- Movie Category -->
            <div class="form-group mb-2">
                <label asp-for="MovieCategory"></label>
                <select asp-for="MovieCategory" class="form-control"
                        asp-items="Html.GetEnumSelectList<MovieCategory>()">
                </select>
                <span asp-validation-for="MovieCategory" class="text-danger"></span>
            </div>

            <!-- Cinema -->
            <div class="form-group mb-2">
                <label asp-for="CinemaId"></label>
                <select asp-for="CinemaId" class="form-control" asp-items="ViewBag.Cinemas">
                </select>
                <span asp-validation-for="CinemaId" class="text-danger"></span>
            </div>

            <!-- Producer -->
            <div class="form-group mb-2">
                <label asp-for="ProducerId"></label>
                <select asp-for="ProducerId" class="form-control" asp-items="ViewBag.Producers">
                </select>
                <span asp-validation-for="ProducerId" class="text-danger"></span>
            </div>

            <!-- Actors (Many-to-Many) -->
            <div class="form-group mb-3">
                <label asp-for="ActorIds"></label>
                <select asp-for="ActorIds" class="form-control" asp-items="ViewBag.Actors" multiple>
                </select>
                <span asp-validation-for="ActorIds" class="text-danger"></span>
            </div>

            <!-- Submit -->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
