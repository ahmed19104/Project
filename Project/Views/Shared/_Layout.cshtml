<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Project</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Project.styles.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100">

    <!-- ================= Navbar ================= -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <!-- Brand -->
                <a class="navbar-brand" asp-controller="Movies" asp-action="Index">Home</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">

                    <!-- Left Links -->
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Movies" asp-action="Index">
                                <i class="bi bi-film"></i> Movies
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Actors" asp-action="Index">
                                Actors
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Cinema" asp-action="Index">
                                <i class="bi bi-camera-reels"></i> Cinema
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Producert" asp-action="Index">
                                Producers
                            </a>
                        </li>
                    </ul>

                    <!-- Search -->
                    <form class="d-flex me-3"
                          asp-controller="Movies"
                          asp-action="Filter">
                        <input class="form-control me-2"
                               type="search"
                               name="searchString"
                               placeholder="Search">
                        <button class="btn btn-outline-success" type="submit">
                            Search
                        </button>
                    </form>

                    <!-- Right Side -->
                    <ul class="navbar-nav align-items-center">

                        <!-- Shopping Cart -->
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Order"
                               asp-action="ShoppingCart">
                                <i class="bi bi-cart3"></i> Cart
                            </a>
                        </li>

                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <!-- Orders -->
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Order"
                                   asp-action="GetAllOrder">
                                    <i class="bi bi-bag-check"></i> Orders
                                </a>
                            </li>

                            <!-- Admin Users -->
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link"
                                       asp-area="Admin"
                                       asp-controller="Account"
                                       asp-action="Users">
                                        <i class="bi bi-people"></i> Users
                                    </a>
                                </li>
                            }

                            <!-- Username -->
                            <li class="nav-item">
                                <span class="nav-link">
                                    Hello, @User.Identity.Name!
                                </span>
                            </li>

                            <!-- Logout -->
                            <li class="nav-item">
                                <form asp-controller="Account"
                                      asp-action="Logout"
                                      method="post"
                                      class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit"
                                            class="btn btn-link nav-link p-0">
                                        Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Account"
                                   asp-action="Login">
                                    Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Account"
                                   asp-action="Register">
                                    Register
                                </a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- ================= Body ================= -->
    <main class="flex-fill container py-3">
        @RenderBody()
    </main>

    <!-- ================= Footer ================= -->
    <footer class="border-top footer text-muted mt-auto p-0" style="position:relative">
        <div class="container text-center">
            &copy; 2025 - Project - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- ================= Scripts ================= -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
    @await Component.InvokeAsync("NToastNotify")

</body>
</html>
